import javax.swing.*;
import javax.swing.text.AttributeSet;
import javax.swing.text.SimpleAttributeSet;
import javax.swing.text.StyleConstants;
import javax.swing.text.StyleContext;

import java.awt.*;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import static javax.swing.WindowConstants.EXIT_ON_CLOSE;

public class WindowAndDrawing {
    private int Key = 38;
    int getKey () {
        return Key;
    }
    JTextPane jTextPane;
    JPanel jPanel;
    JFrame frame = new JFrame("Snake");
    void newjTextPane() {
        jTextPane = new JTextPane();
        jPanel = new JPanel();
        jPanel.add(jTextPane);
        frame.add(jPanel);
    }
    WindowAndDrawing () {
        frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
        frame.setLocation(450, 230);
        frame.setSize(400, 300);
        frame.setVisible(true);
        jTextPane = new JTextPane();
        jPanel = new JPanel();
        jPanel.add(jTextPane);
        frame.add(jPanel);
        frame.addKeyListener(new KeyListener() {
            @Override
            public void keyTyped(KeyEvent e) {}
            @Override
            public void keyPressed(KeyEvent e) {
                Key = e.getKeyCode();
            }
            @Override public void keyReleased(KeyEvent e) {}});
    }
    int i;
    void setI(int b) {i = b;}
    void EndSplashScreen() {
        frame.setVisible(false);
        frame = new JFrame("End?");
        frame.setLocation(450, 230);
        frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
        frame.setSize(400, 300);
        frame.setVisible(true);
        jTextPane = new JTextPane();
        jPanel = new JPanel();
        JButton jButton = new JButton("Ещё раз?");
        JButton jButton1 = new JButton("Я всё(");
        jPanel.add(jTextPane);
        frame.add(jPanel);
        jPanel.add(jButton);
        jPanel.add(jButton1);
        frame.add(jPanel);
        appendToPane(jTextPane,"Ты проиграл!", Color.BLACK);
        jButton.addActionListener(e -> setI(1));
        jButton1.addActionListener(e -> setI(-1));
        while (i != 1) {
            if (i == -1) System.exit(0);
        }
        frame.setVisible(false);
    }
    void appendToPane(JTextPane tp, String msg, Color c)
    {
        StyleContext sc = StyleContext.getDefaultStyleContext();
        AttributeSet aset = sc.addAttribute(SimpleAttributeSet.EMPTY, StyleConstants.Foreground, c);

        aset = sc.addAttribute(aset, StyleConstants.FontFamily, "Lucida Console");
        aset = sc.addAttribute(aset, StyleConstants.Alignment, StyleConstants.ALIGN_JUSTIFIED);

        int len = tp.getDocument().getLength();
        tp.setCaretPosition(len);
        tp.setCharacterAttributes(aset, false);
        tp.replaceSelection(msg);
    }
}
